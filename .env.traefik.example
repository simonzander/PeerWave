# PeerWave Traefik Deployment Configuration
# Copy this file to .env before deploying with docker-compose.traefik.yml
#
# Quick Setup:
# 1. Set your DOMAIN below
# 2. Set TRAEFIK_ACME_PATH to your Traefik's acme.json location
# 3. Generate secrets (SESSION_SECRET, LIVEKIT_API_KEY, LIVEKIT_API_SECRET)
# 4. Run: docker-compose -f docker-compose.traefik.yml up -d

# ============================================
# Domain Configuration
# ============================================
DOMAIN=app.yourdomain.com
HTTPS=true
LIVEKIT_TURN_DOMAIN=app.yourdomain.com

# ============================================
# Traefik Configuration
# ============================================
# Path to Traefik's acme.json file (where certificates are stored)
# Common locations:
#   - /etc/traefik/acme.json
#   - /var/lib/traefik/acme.json
#   - ./traefik/acme.json
TRAEFIK_ACME_PATH=/etc/traefik/acme.json

# ============================================
# Security Credentials (CHANGE THESE!)
# ============================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_MINIMUM_32_CHARS

# LiveKit API Credentials
LIVEKIT_API_KEY=CHANGE_THIS
LIVEKIT_API_SECRET=CHANGE_THIS

# ============================================
# Email Configuration (Optional)
# ============================================
# For meeting invitations and notifications
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="PeerWave" <noreply@yourdomain.com>

# ============================================
# Admin Users (Optional)
# ============================================
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@yourdomain.com
