# PeerWave Environment Variables
# Copy this file to .env and fill in your values

# Node.js Server
NODE_ENV=development
PORT=4000

# coturn STUN/TURN Server
# Generate secure secret with: openssl rand -base64 32
TURN_SECRET=generate-a-secure-random-secret-here
TURN_SERVER_EXTERNAL_HOST=localhost
TURN_SERVER_INTERNAL_HOST=peerwave-coturn
TURN_SERVER_PORT=3478
TURN_SERVER_PORT_TLS=5349
TURN_REALM=peerwave.local
TURN_CREDENTIAL_TTL=86400

# Database (optional)
DB_PATH=./db/peerwave.sqlite

# Session Secret (optional)
SESSION_SECRET=another-secure-random-secret

# Email (optional - for notifications)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
