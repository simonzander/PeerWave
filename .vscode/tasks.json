{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Node.js Server",
			"type": "shell",
			"command": "node server/server.js",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"options": {
				"cwd": "${workspaceFolder}/server"
			}
		},
		{
			"label": "Start Flutter Client",
			"type": "shell",
			"command": "flutter run",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"options": {
				"cwd": "${workspaceFolder}/client"
			}
		},
		{
			"label": "Start Server and Client",
			"dependsOn": [
				"Start Node.js Server",
				"Start Flutter Client"
			],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "flutter-build-and-copy-web",
			"type": "shell",
			"command": "cd client; flutter build web; Copy-Item -Recurse -Force build/web/* ../server/web/",
			"args": [],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "flutter-build-and-copy-web",
			"type": "shell",
			"command": "cd client; flutter build web; Copy-Item -Recurse -Force build/web/* ../server/web/",
			"args": [],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "flutter-build-and-copy-web",
			"type": "shell",
			"command": "cd client; flutter build web; Copy-Item -Recurse -Force build/web/* ../server/web/",
			"args": [],
			"isBackground": false,
			"group": "build"
		}
	]
}